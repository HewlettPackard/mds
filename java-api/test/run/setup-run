#LD_LIBRARY_PATH=/usr/local/lib64
#export LD_LIBRARY_PATH

#JCMD="$JAVA_HOME/java $JVM_ARGS -classpath $CLASSPATH -Djava.library.path=$API/lib"
JCMD="java $JVM_ARGS -classpath $CLASSPATH -Djava.library.path=$LIBS/native"

JAVAC_CMD="javac -classpath $CLASSPATH -d $DEMO/bin"

